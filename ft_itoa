#include "libft.h"
#include <stdlib.h>

static int      ft_intlen(int n)
{
    int         len;

    len = 0;
    if (n == 0)
        return (len + 1);
    while (n > 0)
    {
        n = n / 10;
        len++;
    }
    return (len);
}

static char     *ft_solve(char *str, int n, int len)
{
    while (n > 0)
    {
        str[len--] = n % 10 + '0';
        n = n / 10;
    }
    return (str);
}

char            *ft_itoa(int n)
{
    int     len;
    int     sign;
    char    *str;

    sign = 0;
    if (n == -2147483648)
        return (ft_strdup("-2147483648"));
    if (n < 0)
    {
        sign = 1;
        n = -n;
        len = ft_intlen(n) + 1;
    }
    else
        len = ft_intlen(n);
    if (!(str = (char *)malloc(sizeof(char) * (len + 1))))
        return (NULL);
    if (n == 0)
        str[0] = '0';
    str[len] = '\0';
    if (sign == 1)
        str[0] = '-';
    ft_solve(str, n, len - 1);
